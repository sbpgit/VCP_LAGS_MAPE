<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <SelectDialog
        id="idProductDialogLag"
        search="handleSearch"
       titleAlignment="Center"
        title=  "Products"
        liveChange="handleSearch"
        multiSelect="false"
        rememberSelections="true"
        confirm="handleSelection"
        cancel="handleClose"
        selectionChange="handleSelectionChange"
        items="{/results}"
    >
        <StandardListItem
            title="{PRODUCT_ID}"
            description="{PRODUCT_ID}"
            type="Active"
        />
    </SelectDialog>
</core:FragmentDefinition>
