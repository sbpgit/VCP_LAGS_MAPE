<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <SelectDialog
        id="idFLocDialogLag"
        search="handleSearch"
        title="Manufacturing Locations"
        titleAlignment="Center"
		liveChange="handleSearch"
        multiSelect="false"
        rememberSelections="true"
        confirm="handleSelection"
        cancel="handleClose"
        items="{/results}"
        growing="false"
        selectionChange="handleSelectionChange"
    >   
        <StandardListItem
            title="{FACTORY_LOC}"
            description="{FACTORY_LOC}"
            type="Active"
        />
    </SelectDialog>
</core:FragmentDefinition>
